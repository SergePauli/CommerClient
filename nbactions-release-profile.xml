<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>javafx:run</goal>
            </goals>
            <properties>
                <jshell.run.enable>true</jshell.run.enable>
                <jshell.classloader.from.class>com.cbs.commerclient.App</jshell.classloader.from.class>
                <jshell.run.classloader>class</jshell.run.classloader>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>clean</goal>
                <goal>javafx:run@ide-debug</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <jshell.run.enable>true</jshell.run.enable>
                <jshell.classloader.from.class>com.cbs.commerclient.App</jshell.classloader.from.class>
                <jshell.run.classloader>class</jshell.run.classloader>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>clean</goal>
                <goal>javafx:run@ide-profile</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-jlink</actionName>
            <displayName>jlink</displayName>
            <goals>
                <goal>clean</goal>
                <goal>compile</goal>
                <goal>javafx:jlink</goal>
            </goals>
        </action>
    </actions>
